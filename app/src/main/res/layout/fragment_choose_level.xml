<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.ChooseLevelFragment">


    <TextView
        android:id="@+id/tv_level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Выберите уровень:"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button_level_test"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="ТЕСТОВЫЙ"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button_level_easy"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/easy"
        android:elevation="3dp"
        android:text="ЛЕГКИЙ"
        android:textStyle="bold"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button_level_normal"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/normal"
        android:text="СРЕДНИЙ"
        android:textStyle="bold"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/button_level_hard"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/hard"
        android:text="ТЯЖЕЛЫЙ"
        android:textStyle="bold"
        app:cornerRadius="0dp"/>
</LinearLayout>